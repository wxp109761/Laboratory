<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"

            android:background="@android:color/white"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:text="工号："
                    style="@style/Custom.user_info" />
            <EditText
                    android:id="@+id/job_number"
                    style="@style/Custom.user_info"/>
        </LinearLayout>
        <View style="@style/Custom.lineStyle" />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:text="姓名："
                    style="@style/Custom.add_labs" />
            <EditText
                    android:id="@+id/add_user_name"
                    style="@style/Custom.user_info"/>
        </LinearLayout>
        <View style="@style/Custom.lineStyle" />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:text="初始密码："
                    style="@style/Custom.add_labs" />
            <EditText
                    android:id="@+id/init_password"
                    style="@style/Custom.user_info"
                    android:password="true"
            />
        </LinearLayout>
        <View style="@style/Custom.lineStyle" />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:text="学院："
                    style="@style/Custom.user_info" />
            <TextView style="@style/Custom.user_info"
                      android:id="@+id/user_depart"/>
            <Spinner
                    android:id="@+id/depart_spinner" style="@style/Custom.add_labs"
                    android:visibility="gone"
            />
        </LinearLayout>
        <View style="@style/Custom.lineStyle" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:text="联系方式："
                    style="@style/Custom.add_labs" />
            <EditText
                    android:id="@+id/tel_phone"
                    style="@style/Custom.user_info"/>
        </LinearLayout>

        <View style="@style/Custom.lineStyle" />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:text="权限： "
                    style="@style/Custom.user_info" />

            <TextView style="@style/Custom.user_info"
                      android:id="@+id/tv_user_permission"/>
            <Spinner
                    android:id="@+id/permission" style="@style/Custom.add_labs"
                    android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="新增实验室安全员"
            android:id="@+id/add_labs"/>

</LinearLayout>